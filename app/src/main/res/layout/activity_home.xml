<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    tools:context=".home">


    <!--Creating the menu grid button-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/home_bar"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="12sp"
        app:layout_constraintBottom_toTopOf="@+id/g2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/g1">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:gravity="right"
            android:orientation="horizontal">

            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/searchview"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:padding="5sp"
                android:src="@drawable/ic_baseline_search_24" />

            <com.skydoves.elasticviews.ElasticImageView
                android:id="@+id/imageView"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/ic_outline_supervisor_account_24" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#fafafa"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Loading..."
            android:textColor="#fafafa"
            android:textSize="25sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="@id/g3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/g2">


        <com.skydoves.elasticviews.ElasticImageView

            android:id="@+id/ap1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10sp"

            android:clickable="true"
            android:src="@drawable/pro"
            app:layout_constraintBottom_toTopOf="@+id/cs1"
            app:layout_constraintEnd_toStartOf="@+id/ao1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling" />


        <com.skydoves.elasticviews.ElasticImageView

            android:id="@+id/ao1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10sp"

            android:clickable="true"
            android:src="@drawable/order"
            app:layout_constraintBottom_toTopOf="@+id/ab1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ap1"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling" />

        <com.skydoves.elasticviews.ElasticImageView

            android:id="@+id/cs1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10sp"

            android:clickable="true"
            android:src="@drawable/how"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ab1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ap1"
            tools:ignore="NotSibling" />

        <com.skydoves.elasticviews.ElasticImageView

            android:id="@+id/ab1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10sp"

            android:clickable="true"
            android:src="@drawable/about"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cs1"
            app:layout_constraintTop_toBottomOf="@+id/ao1"
            tools:ignore="NotSibling" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0"
        app:layout_constraintGuide_begin="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>