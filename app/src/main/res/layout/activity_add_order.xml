<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#C5D6FF"
    android:layout_height="match_parent"
    tools:context=".add_order">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp">

    <EditText
        android:layout_marginTop="50sp"
        android:id="@+id/orderID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_draw"
        android:ems="10"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:inputType="textPersonName"
        android:hint="@string/order_id" />

    <EditText
        android:id="@+id/orderTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_draw"
        android:ems="10"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:inputType="textPersonName"
        android:hint="@string/order_title" />

    <EditText
        android:id="@+id/contactDetails"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:background="@drawable/input_draw2"
        android:textAlignment="textStart"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:ems="10"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:inputType="textPersonName"

        android:hint="@string/contact_details"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/trackingNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_draw"
        android:ems="10"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:inputType="textPersonName"
        android:hint="@string/tracking_number"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/shippedDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_draw"
        android:ems="10"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:inputType="textPersonName"
        android:hint="@string/shipped_date"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/completedDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_draw"
        android:ems="10"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:inputType="textPersonName"
        android:hint="@string/completed_date"
        tools:ignore="TextFields" />


    <com.skydoves.elasticviews.ElasticImageView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:padding="5sp"
        android:src="@drawable/button_place_order" />

</LinearLayout>
</ScrollView>