<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:id="@+id/bar"
        android:background="@drawable/home_bar"
        android:gravity="center_horizontal"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lay"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="27sp"
            android:paddingRight="10sp"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toStartOf="@+id/serchbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/searchbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittextround"
                android:ems="15"
                android:hint="Enter Order/Product Number"
                android:inputType="textPersonName"
                android:paddingLeft="20sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp" />

        </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/serchbtn"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="36sp"

        android:layout_marginEnd="15sp"
        android:background="@drawable/imgbutnconer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"

        android:layout_marginVertical="10sp"
        android:background="@drawable/searchview"
        android:orientation="vertical"
        android:padding="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar"

        tools:layout_editor_absoluteX="197sp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:fontFamily="sans-serif-black"
            android:text="Search Results"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/nodata"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginTop="45sp"
            android:visibility="invisible"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="nodata.json"
            app:lottie_loop="true"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35sp"
            android:orientation="vertical"
            android:visibility="invisible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seorID"
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:background="@drawable/button2"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:text="order_id_15225523345"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2">

                    <ImageView
                        android:id="@+id/seimdel2"
                        android:layout_width="50sp"
                        android:layout_height="50sp"

                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/delevered"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/seimship"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/shipped"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/seimntshp"

                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/not_shipped"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setitle"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:text="134485513135"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>