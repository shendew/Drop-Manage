<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/bar"
        android:background="@drawable/home_bar"
        android:gravity="center_horizontal"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="27dp"
        android:paddingRight="10dp"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toStartOf="@+id/serchbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/searchbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittextround"
            android:ems="15"
            android:hint="Enter Order/Product Number"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/serchbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"

        android:layout_marginEnd="15dp"
        android:background="@drawable/imgbutnconer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:orientation="vertical"

        android:background="@drawable/searchview"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        android:layout_marginVertical="10dp"
        android:padding="10dp"

        tools:layout_editor_absoluteX="197dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-black"
            android:text="Search Results"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:lottie_autoPlay="true"
            app:lottie_fileName="nodata.json"
            app:lottie_loop="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp" />




        <LinearLayout
            android:id="@+id/view"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seorID"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button2"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:text="order_id_15225523345"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2">

                    <ImageView
                        android:id="@+id/seimdel2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/delevered"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/seimship"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/shipped"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/seimntshp"

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/not_shipped"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="serif-monospace"
                    android:gravity="center_vertical"
                    android:text="134485513135"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>